{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "google",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "semi": ["error", "never"],
    "no-tabs": 0,
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
//    "no-console": 0,
    "prettier/prettier": ["error", { "semi": false }]
  }
}
